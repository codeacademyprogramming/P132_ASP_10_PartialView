@model Book
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="container-fluid">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="create" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GenreId">Genre</label>
                        <select asp-for="GenreId" class="form-control"  asp-items="@(new SelectList(ViewBag.Genres,nameof(Genre.Id),nameof(Genre.Name)))">
                          
                        </select>
                        <span class="text-danger" asp-validation-for="GenreId"></span>

                    </div>
                      <div class="form-group">
                        <label asp-for="AuthorId">Author</label>
                        <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag.Authors,nameof(Author.Id),nameof(Author.Fullname)))">
                          
                        </select>
                        <span class="text-danger" asp-validation-for="AuthorId"></span>
                    </div>
                      <div class="form-group">
                        <label asp-for="TagIds">Tags</label>
                        <select asp-for="TagIds" class="form-control" asp-items="@(new SelectList(ViewBag.Tags,nameof(Tag.Id),nameof(Tag.Name)))">
                        </select>
                        <span class="text-danger" asp-validation-for="TagIds"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SalePrice">SalePrice</label>
                        <input asp-for="SalePrice" class="form-control">
                        <span class="text-danger" asp-validation-for="SalePrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CostPrice">CostPrice</label>
                        <input asp-for="CostPrice" class="form-control">
                        <span class="text-danger" asp-validation-for="CostPrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountPercent">DiscountPercent</label>
                        <input asp-for="DiscountPercent" class="form-control">
                        <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StockStatus">StockStatus</label>
                        <input asp-for="StockStatus" class="form-control">
                        <span class="text-danger" asp-validation-for="StockStatus"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsNew">IsNew</label>
                        <input asp-for="IsNew" class="form-control">
                        <span class="text-danger" asp-validation-for="IsNew"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IsSpecial">IsSpecial</label>
                        <input asp-for="IsSpecial" class="form-control">
                        <span class="text-danger" asp-validation-for="IsSpecial"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="PosterFile">PosterFile</label>
                        <input asp-for="PosterFile" class="form-control">
                        <span class="text-danger" asp-validation-for="PosterFile"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HoverPosterFile">HoverPosterFile</label>
                        <input asp-for="HoverPosterFile" class="form-control">
                        <span class="text-danger" asp-validation-for="HoverPosterFile"></span>
                    </div>
                       <div class="form-group">
                        <label asp-for="ImageFiles">ImageFiles</label>
                        <input asp-for="ImageFiles" class="form-control">
                        <span class="text-danger" asp-validation-for="ImageFiles"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>