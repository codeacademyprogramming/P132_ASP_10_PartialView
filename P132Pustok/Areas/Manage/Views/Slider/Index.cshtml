@model List<Slider>
@{
    ViewData["Title"] = "Index";

    int counter = 0;
}

<div class="row justify-content-between align-content-center">
    <div class="col-md-4">
<h1 class="m-0">Sliders</h1>
</div>
<div class="col-md-3 d-flex align-items-center">
    <a asp-action="create" class="btn btn-primary">Create</a>
</div>

</div>
    
<div class="container-fluid">
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Order</th>
                    <th scope="col">Title</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Order</td>
                        <td>@item.Title</td>
                        <td><img width="100" src="~/uploads/sliders/@item.Image" /></td>
                        <td>
                            <a class="btn btn-danger  trash-btn" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-info" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12">
          
        </div>

    </div>

</div>