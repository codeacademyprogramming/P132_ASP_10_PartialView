 @model Order   
 <div class="col-lg-7 mb--20">
                            <form id="order-form" method="post">
                            <!-- Billing Address -->
                            <div id="billing-form" class="mb-40">
                                <h4 class="checkout-title">Billing Address</h4>
                                <div class="row">
                                    <div class="col-md-6 col-12 mb--20">
                                        <label asp-for="Fullname">Full Name*</label>
                                        <input asp-for="Fullname" type="text" placeholder="Full Name">
                                        <span class="text-danger" asp-validation-for="Fullname"></span>
                                    </div>
                                    <div class="col-md-6 col-12 mb--20">
                                        <label asp-for="Email">Email Address*</label>
                                        <input asp-for="Email" type="email" placeholder="Email Address">
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="col-12 mb--20">
                                        <label asp-for="Address1">Address*</label>
                                        <input asp-for="Address1" type="text" placeholder="Address line 1">
                                        <input asp-for="Address2" type="text" placeholder="Address line 2">
                                        <span class="text-danger" asp-validation-for="Address1"></span>
                                        <span class="text-danger" asp-validation-for="Address2"></span>


                                    </div>
                                    <div class="col-md-6 col-12 mb--20">
                                        <label asp-for="City">Town/City*</label>
                                        <input asp-for="City" type="text" placeholder="Town/City">
                                        <span class="text-danger" asp-validation-for="City"></span>

                                    </div>
                                    <div class="col-md-6 col-12 mb--20">
                                        <label asp-for="ZipCode">Zip Code*</label>
                                        <input asp-for="ZipCode" type="text" placeholder="Zip Code">
                                        <span class="text-danger" asp-validation-for="ZipCode"></span>

                                    </div>
                                </div>
                            </div>
                            <div class="order-note-block mt--30">
                                <label asp-for="Note">Order notes</label>
                                <textarea asp-for="Note" id="order-note" cols="30" rows="10" class="order-note"
                                          placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                                        <span class="text-danger" asp-validation-for="Note"></span>

                            </div>
                            </form>
                        </div>