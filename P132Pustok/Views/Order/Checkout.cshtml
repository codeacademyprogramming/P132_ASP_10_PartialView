@model CheckoutViewModel

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Checkout</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<main id="content" class="page-section inner-page-sec-padding-bottom space-db--20">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Checkout Form s-->
                <div class="checkout-form">
                    <div class="row row-40">
                        <div class="col-12">
                            <h1 class="quick-title">Checkout</h1>
                        </div>
                   @await Html.PartialAsync("_CheckoutFormPartial",Model.Order)
                        <div class="col-lg-5">
                            <div class="row">
                                <!-- Cart Total -->
                                <div class="col-12">
                                    <div class="checkout-cart-total">
                                        <h2 class="checkout-title">YOUR ORDER</h2>
                                        <h4>Product <span>Total</span></h4>
                                        <ul>
                                           
                                        @foreach (var item in Model.CheckoutItems)
                                        {
                                               <li>
                                                <span class="left">@item.Name X @item.Count</span>
                                                <span class="right">$@item.TotalPrice.ToString("0.00")</span>
                                            </li>
                                        }
                                        </ul>
                                        <h4>Total <span>$@Model.Total.ToString("0.00")</span></h4>
                                        <button form="order-form" type="submit" class="place-order w-100">Place order</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</main>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial");
}