@model ForgotPasswordViewModel
	
		<section class="breadcrumb-section">
			<h2 class="sr-only">Site Breadcrumb</h2>
			<div class="container">
				<div class="breadcrumb-contents">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="index.html">Home</a></li>
							<li class="breadcrumb-item active">Forgotpassword</li>
						</ol>
					</nav>
				</div>
			</div>
		</section>
		<!--=============================================
    =            Forgot password page content         =
    =============================================-->
		<main class="page-section inner-page-sec-padding-bottom">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
						<!-- Login Form s-->
						<form method="post">
							<div class="login-form">
								<h4 class="login-title">Login Customer</h4>
								<div class="row">
									<div class="col-md-12 col-12 mb--15">
										<label asp-for="Email">Email</label>
										<input class="mb-0 form-control" asp-for="Email" id="name"
											placeholder="Enter your email">
											<span class="text-danger" asp-validation-for="Email"></span>
									</div>
									<div class="text-danger" asp-validation-summary=ModelOnly></div>
									<div class="col-md-12">
										<button type="submit" class="btn btn-outlined">Submit</button>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</main>

	
		@section Scripts{
    @Html.Partial("_ValidationScriptsPartial");
}