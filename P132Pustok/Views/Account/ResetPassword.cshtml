@model PasswordResetViewModel
	
		<section class="breadcrumb-section">
			<h2 class="sr-only">Site Breadcrumb</h2>
			<div class="container">
				<div class="breadcrumb-contents">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="index.html">Home</a></li>
							<li class="breadcrumb-item active">Reset password</li>
						</ol>
					</nav>
				</div>
			</div>
		</section>
		<!--=============================================
    =            Forgot password page content         =
    =============================================-->
		<main class="page-section inner-page-sec-padding-bottom">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
						<!-- Login Form s-->
						<form method="post">
							<div class="login-form">
								<h4 class="login-title">Login Customer</h4>
								<div class="row">
									<div class="col-md-12 col-12 mb--15">
										<label asp-for="Password">Password</label>
										<input class="mb-0 form-control" asp-for="Password" id="Password"
											placeholder="Enter your new password">
											<span class="text-danger" asp-validation-for="Password"></span>
									</div>
									<div class="col-md-12 col-12 mb--15">
										<label asp-for="ConfirmPassword">ConfirmPassword</label>
										<input class="mb-0 form-control" asp-for="ConfirmPassword" id="ConfirmPassword"
											placeholder="Enter your new password again">
											<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
									</div>
									<input type="hidden" asp-for="Email" value="@TempData["email"]" />
									<input type="hidden" asp-for="Token" value="@TempData["token"]" />

									<div class="text-danger" asp-validation-summary=ModelOnly></div>
									<div class="col-md-12">
										<button type="submit" class="btn btn-outlined">Submit</button>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</main>

	
		@section Scripts{
    @Html.Partial("_ValidationScriptsPartial");
}